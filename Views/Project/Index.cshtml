@*  indicates that the view expects a lsit of a project*@
@model List<Project>


@{
    ViewBag.Title = "List Of Projects";
    Layout = "_Layout";
}

<h2>Projects Listing</h2>

@if (Model.Any())
{
    //literation
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        </thead>
        
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.ProjectId</td>
                <td>@project.Name</td>
                <td>@project.Description</td>
            </tr>
        }
            
        </tbody>
        
        
        
    </table>
}
else
{
    <p>No projects here</p>
}
